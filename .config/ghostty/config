keybind = global:cmd+grave_accent=toggle_quick_terminal

keybind = shift+enter=text:\x1b\r

# --- 見た目・フォント ---
# フォント設定（未インストールの場合はシステムデフォルトにフォールバック）
font-family = JetBrains Mono
font-size = 14

# 行間を少し広げてモダンにする
adjust-cell-height = 10%

# --- テーマ ---
theme = Mariana

# --- ウィンドウ・透過度 ---
# 背景を透過
background-opacity = 1

# ブラー（すりガラス効果）
background-blur-radius = 20

# ウィンドウ内の余白を入れて圧迫感を減らす
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true

# 背景画像
# install.sh が ~/Downloads/cat-image.jpg を ~/.config/ghostty/bg.jpg にコピーする
# 手動で配置する場合: cp ~/Downloads/cat-image.jpg ~/.config/ghostty/bg.jpg
background-image = ~/.config/ghostty/bg.jpg
background-image-opacity = 0.2
background-image-fit = cover

# --- 操作性 ---
# 選択しただけでクリップボードにコピー
copy-on-select = clipboard

# クリップボードの読み書きを許可
clipboard-read = allow
clipboard-write = allow